{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "rules": {
    "react/display-name": 0,
    "react/prop-types": 0,
    "no-console": 0,
    "no-trailing-spaces": "error",
    "eol-last": [
      "error",
      "always"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
